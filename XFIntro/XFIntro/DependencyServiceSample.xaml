<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFIntro.DependencyServiceSample">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="I am so clever that sometimes I don't understand a single word of what I am saying. By Oscar Wilde."
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" x:Name="readText" />
            <Button Text="Read me!" Clicked="onReadClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>