<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFIntro.SimpleShared">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Zahl 1" Text="" x:Name="number1" />
                <Label Text="x" />
                <Entry Placeholder="Zahl 2" Text="" x:Name="number2" />
            </StackLayout>
            <Button Text="Multiply!" Clicked="MultiplyClicked" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Result: " />
                <Label x:Name="resultLabel" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>